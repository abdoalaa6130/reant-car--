@model IEnumerable<RentCars.Models.cars>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br /><br /><br />
<div class="container">

    <p>
        <a href="Products" class="btn btn-danger">أضافة </a>
    </p>
    <br />
    <table class="table" dir="rtl" border="1">
        <tr>
            <th>
                <p style="color:orangered">ماركة السيارة</p>
            </th>
            <th>
                الموديل
            </th>
            <th>
                النوع
            </th>
            <th>
                عدد الركاب
            </th>
            <th>
                التهوية
            </th>
            <th>
                عدد الابواب
            </th>
            <th>
                صورة
            </th>
            <th>
                السعر فى اليوم
            </th>
            <th></th>

        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adaptation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfDoors)
            </td>
            <td>
                <img src="@Url.Content(item.Image)" width="100" height="100" alt="Product Image">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.priceForDay)
            </td>
            <td>
           
                @Html.ActionLink("تعديل", "Products", new { id = item.Id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
           
        </tr>
        }

    </table>
</div>
