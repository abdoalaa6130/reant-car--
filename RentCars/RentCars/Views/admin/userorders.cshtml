@model  RentCars.Models.UserOrderModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br /><br /><br /><br /><br />
<div class="product-detail">
    <h2 style="text-align:center">طلبيات المستخدمين</h2>
    <br />
    <table class="table" dir="rtl">
        <tr>
            <th>
                رقم العملية
            </th>

            <th>
                اسم العميل
            </th>
            <th>
                رقم العميل
            </th>
            <th>
                ماركة السيارة
            </th>

            <th>
                الموديل
            </th>
            <th>
                المدة
            </th>
            <th>
                الصورة
            </th>
            <th>
                المبلغ
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.rentRequsts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerPhone)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Mark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentDuration)
                </td>
                <td>
                    <img src="@Url.Content(item.Image)" width="100" height="100" alt="Product Image">

                </td>
                <td>
                    تم دفع @Html.DisplayFor(modelItem => item.total)

                </td>
                <td>
                    @Html.ActionLink("انتهاءالحجز", "Deleteuserorder", new { id = item.Id })|
                    @Html.ActionLink("تاكيد الحجز", "approve", new { id = item.Id })


                </td>



            </tr>
        }


    </table>

</div>


